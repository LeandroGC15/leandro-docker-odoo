<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario de factura -->
    <record id="view_move_form_inherit_discount_rule" model="ir.ui.view">
        <field name="name">account.move.form.inherit.discount.rule</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Mostrar tipo de cliente junto al cliente -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="customer_type" readonly="1"
                       invisible="move_type not in ['out_invoice', 'out_refund']"
                       widget="badge"
                       decoration-info="customer_type == 'vip'"
                       decoration-primary="customer_type == 'mayorista'"
                       decoration-success="customer_type == 'minorista'"/>
            </xpath>
            <!-- Hacer visible la columna de descuento -->
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']" position="attributes">
                <attribute name="optional">show</attribute>
                <attribute name="column_invisible">0</attribute>
            </xpath>
        </field>
    </record>
</odoo>
