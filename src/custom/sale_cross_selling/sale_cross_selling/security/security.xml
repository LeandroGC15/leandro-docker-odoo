<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- CategorÃ­a de Cross-Selling -->
        <record id="module_category_sale_cross_selling" model="ir.module.category">
            <field name="name">Cross-Selling</field>
            <field name="description">Permisos para gestionar reglas de cross-selling en ventas</field>
            <field name="sequence">30</field>
        </record>

        <!-- Grupo para usuarios que pueden ver reglas de cross-selling -->
        <record id="group_cross_sell_user" model="res.groups">
            <field name="name">Usuario / Cross-Selling</field>
            <field name="category_id" ref="module_category_sale_cross_selling"/>
            <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
            <field name="comment">Puede ver sugerencias de cross-selling en pedidos de venta</field>
        </record>

        <!-- Grupo para managers que pueden gestionar reglas de cross-selling -->
        <record id="group_cross_sell_manager" model="res.groups">
            <field name="name">Manager / Cross-Selling</field>
            <field name="category_id" ref="module_category_sale_cross_selling"/>
            <field name="implied_ids" eval="[(4, ref('group_cross_sell_user'))]"/>
            <field name="comment">Puede crear, editar y eliminar reglas de cross-selling</field>
        </record>
    </data>
    
    <data noupdate="1">
        <!-- Regla de registro: Usuarios de ventas pueden ver reglas de cross-selling -->
        <record id="cross_sell_rule_sale_user" model="ir.rule">
            <field name="name">Cross-Selling: Usuarios de ventas pueden leer</field>
            <field name="model_id" ref="model_product_cross_sell"/>
            <field name="domain_force">[('active', '=', True)]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Regla de registro: Managers de ventas ven todas las reglas -->
        <record id="cross_sell_rule_sale_manager" model="ir.rule">
            <field name="name">Cross-Selling: Managers de ventas ven todo</field>
            <field name="model_id" ref="model_product_cross_sell"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Regla de registro: Usuarios del grupo cross_sell_user -->
        <record id="cross_sell_rule_user" model="ir.rule">
            <field name="name">Cross-Selling: usuarios pueden leer activas</field>
            <field name="model_id" ref="model_product_cross_sell"/>
            <field name="domain_force">[('active', '=', True)]</field>
            <field name="groups" eval="[(4, ref('group_cross_sell_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Regla de registro: Managers de cross-sell ven todas las reglas -->
        <record id="cross_sell_rule_manager" model="ir.rule">
            <field name="name">Cross-Selling: managers ven todo</field>
            <field name="model_id" ref="model_product_cross_sell"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_cross_sell_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>

