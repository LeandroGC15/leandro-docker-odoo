<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Kanban para evaluaciones de desempeño -->
    <record id="hr_performance_review_kanban_view" model="ir.ui.view">
        <field name="name">hr.performance.review.kanban</field>
        <field name="model">hr.performance.review</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="id"/>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="reviewer_id"/>
                <field name="review_date"/>
                <field name="score"/>
                <field name="state"/>
                <field name="kanban_state"/>
                <field name="department_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <span class="badge rounded-pill"
                                              t-attf-class="#{record.state.raw_value == 'done' ? 'text-bg-success' : record.state.raw_value == 'cancel' ? 'text-bg-danger' : record.state.raw_value == 'in_progress' ? 'text-bg-warning' : 'text-bg-secondary'}">
                                            <field name="state"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="mb-1">
                                        <strong>Empleado:</strong>
                                        <field name="employee_id"/>
                                    </div>
                                    <div class="mb-1">
                                        <strong>Evaluador:</strong>
                                        <field name="reviewer_id"/>
                                    </div>
                                    <div class="mb-1">
                                        <strong>Departamento:</strong>
                                        <field name="department_id"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="review_date"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span class="badge rounded-pill text-bg-info">
                                            <i class="fa fa-star"/> <field name="score"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista Tree para evaluaciones de desempeño -->
    <record id="hr_performance_review_tree_view" model="ir.ui.view">
        <field name="name">hr.performance.review.tree</field>
        <field name="model">hr.performance.review</field>
        <field name="arch" type="xml">
            <tree string="Evaluaciones de Desempeño" 
                  decoration-info="state == 'draft'"
                  decoration-warning="state == 'in_progress'"
                  decoration-success="state == 'done'"
                  decoration-danger="state == 'cancel'">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="department_id" optional="show"/>
                <field name="job_id" optional="hide"/>
                <field name="reviewer_id"/>
                <field name="review_date"/>
                <field name="score_percentage" widget="progressbar" string="Calificación"/>
                <field name="state" widget="badge" 
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'in_progress'"
                       decoration-success="state == 'done'"
                       decoration-danger="state == 'cancel'"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Vista Formulario para evaluaciones de desempeño -->
    <record id="hr_performance_review_form_view" model="ir.ui.view">
        <field name="name">hr.performance.review.form</field>
        <field name="model">hr.performance.review</field>
        <field name="arch" type="xml">
            <form string="Evaluación de Desempeño">
                <header>
                    <button name="action_start_review" 
                            string="Iniciar Evaluación" 
                            type="object"
                            class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_complete_review" 
                            string="Completar Evaluación" 
                            type="object"
                            class="btn-success"
                            invisible="state != 'in_progress'"/>
                    <button name="action_cancel_review" 
                            string="Cancelar" 
                            type="object"
                            invisible="state in ('done', 'cancel')"/>
                    <button name="action_reset_to_draft" 
                            string="Volver a Borrador" 
                            type="object"
                            invisible="state not in ('cancel',)"/>
                    <button name="action_print_report"
                            string="Imprimir Reporte"
                            type="object"
                            class="btn-secondary"
                            icon="fa-print"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Información de la Evaluación">
                            <field name="employee_id" 
                                   readonly="state != 'draft'"
                                   options="{'no_create': True}"/>
                            <field name="department_id" readonly="1"/>
                            <field name="job_id" readonly="1"/>
                            <field name="reviewer_id" 
                                   readonly="state == 'done'"
                                   options="{'no_create': True}"/>
                            <field name="review_date" 
                                   readonly="state == 'done'"/>
                        </group>
                        <group string="Calificación">
                            <label for="score"/>
                            <div class="o_row">
                                <field name="score" 
                                       readonly="state == 'done'"
                                       class="oe_inline"/>
                                <span class="oe_inline"> / 10</span>
                            </div>
                            <field name="score_percentage" widget="progressbar" readonly="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Observaciones" name="comments">
                            <group>
                                <field name="comments" 
                                       placeholder="Ingrese observaciones cualitativas sobre el desempeño del empleado..."
                                       nolabel="1"
                                       readonly="state == 'done'"/>
                            </group>
                        </page>
                        <page string="Fortalezas y Áreas de Mejora" name="strengths_weaknesses">
                            <group>
                                <group string="Fortalezas">
                                    <field name="strengths" 
                                           placeholder="Identifique los puntos fuertes del empleado..."
                                           nolabel="1"
                                           readonly="state == 'done'"/>
                                </group>
                                <group string="Áreas de Mejora">
                                    <field name="weaknesses" 
                                           placeholder="Identifique los aspectos a mejorar..."
                                           nolabel="1"
                                           readonly="state == 'done'"/>
                                </group>
                            </group>
                        </page>
                        <page string="Objetivos" name="goals">
                            <group>
                                <field name="goals_next_period" 
                                       placeholder="Defina los objetivos para el siguiente período de evaluación..."
                                       nolabel="1"
                                       readonly="state == 'done'"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de búsqueda -->
    <record id="hr_performance_review_search_view" model="ir.ui.view">
        <field name="name">hr.performance.review.search</field>
        <field name="model">hr.performance.review</field>
        <field name="arch" type="xml">
            <search string="Evaluaciones de Desempeño">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="reviewer_id"/>
                <field name="department_id"/>
                <separator/>
                <filter string="Borrador" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="En Progreso" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Completadas" name="done" domain="[('state', '=', 'done')]"/>
                <filter string="Canceladas" name="cancel" domain="[('state', '=', 'cancel')]"/>
                <separator/>
                <filter string="Este Mes" name="this_month" 
                        domain="[('review_date', '>=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('review_date', '&lt;', (context_today() + relativedelta(months=1, day=1)).strftime('%Y-%m-%d'))]"/>
                <filter string="Este Año" name="this_year"
                        domain="[('review_date', '>=', (context_today()).strftime('%Y-01-01')),
                                 ('review_date', '&lt;=', (context_today()).strftime('%Y-12-31'))]"/>
                <separator/>
                <filter string="Mis Evaluaciones como Revisor" name="my_reviews"
                        domain="[('reviewer_id.user_id', '=', uid)]"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Estado" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Empleado" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Evaluador" name="group_reviewer" context="{'group_by': 'reviewer_id'}"/>
                    <filter string="Departamento" name="group_department" context="{'group_by': 'department_id'}"/>
                    <filter string="Fecha de Evaluación" name="group_review_date" context="{'group_by': 'review_date:month'}"/>
                    <filter string="Compañía" name="group_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción principal -->
    <record id="hr_performance_review_action" model="ir.actions.act_window">
        <field name="name">Evaluaciones de Desempeño</field>
        <field name="res_model">hr.performance.review</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_done': 0}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primera evaluación de desempeño
            </p>
            <p>
                Las evaluaciones de desempeño permiten hacer seguimiento del
                rendimiento de los empleados, registrar calificaciones, 
                observaciones y definir objetivos para el siguiente período.
            </p>
        </field>
    </record>

    <!-- Acción para evaluaciones pendientes -->
    <record id="hr_performance_review_action_pending" model="ir.actions.act_window">
        <field name="name">Evaluaciones Pendientes</field>
        <field name="res_model">hr.performance.review</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('state', 'in', ['draft', 'in_progress'])]</field>
        <field name="context">{'search_default_draft': 1, 'search_default_in_progress': 1}</field>
    </record>

    <!-- Acción para evaluaciones completadas -->
    <record id="hr_performance_review_action_completed" model="ir.actions.act_window">
        <field name="name">Evaluaciones Completadas</field>
        <field name="res_model">hr.performance.review</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('state', '=', 'done')]</field>
        <field name="context">{'search_default_done': 1}</field>
    </record>

    <!-- Menú principal - visible para usuarios de HR -->
    <menuitem id="hr_performance_review_menu_root"
              name="Evaluaciones de Desempeño"
              web_icon="hr_performance_review,static/description/icon.svg"
              groups="hr.group_hr_user"
              sequence="90"/>

    <!-- Submenú Evaluaciones -->
    <menuitem id="hr_performance_review_menu_main"
              name="Evaluaciones"
              parent="hr_performance_review_menu_root"
              sequence="10"/>

    <menuitem id="hr_performance_review_menu_all"
              name="Todas las Evaluaciones"
              parent="hr_performance_review_menu_main"
              action="hr_performance_review_action"
              sequence="10"/>

    <menuitem id="hr_performance_review_menu_pending"
              name="Pendientes"
              parent="hr_performance_review_menu_main"
              action="hr_performance_review_action_pending"
              sequence="20"/>

    <menuitem id="hr_performance_review_menu_completed"
              name="Completadas"
              parent="hr_performance_review_menu_main"
              action="hr_performance_review_action_completed"
              sequence="30"/>

    <!-- Submenú Configuración -->
    <menuitem id="hr_performance_review_menu_config"
              name="Configuración"
              parent="hr_performance_review_menu_root"
              groups="hr.group_hr_manager"
              sequence="99"/>
</odoo>

