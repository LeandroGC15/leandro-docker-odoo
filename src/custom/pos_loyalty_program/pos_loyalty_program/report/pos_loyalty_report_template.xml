<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Plantilla para reporte de histórico de puntos del cliente -->
    <template id="report_partner_loyalty_history_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="text-center mb-4">
                            Reporte de Puntos de Fidelización
                        </h2>

                        <!-- Información del Cliente -->
                        <div class="row mb-4">
                            <div class="col-6">
                                <table class="table table-sm table-borderless">
                                    <tr>
                                        <td class="fw-bold" style="width: 40%;">Cliente:</td>
                                        <td><t t-esc="doc.name"/></td>
                                    </tr>
                                    <tr t-if="doc.email">
                                        <td class="fw-bold">Email:</td>
                                        <td><t t-esc="doc.email"/></td>
                                    </tr>
                                    <tr t-if="doc.phone">
                                        <td class="fw-bold">Teléfono:</td>
                                        <td><t t-esc="doc.phone"/></td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-6">
                                <table class="table table-sm table-borderless">
                                    <tr>
                                        <td class="fw-bold" style="width: 50%;">Total Transacciones:</td>
                                        <td><t t-esc="doc.loyalty_history_count"/></td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Total Ganados:</td>
                                        <td><t t-esc="'%.0f' % doc.loyalty_points_total_earned"/> puntos</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Total Canjeados:</td>
                                        <td><t t-esc="'%.0f' % doc.loyalty_points_total_redeemed"/> puntos</td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <!-- Resumen de Saldo -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header bg-primary text-white">
                                        <strong>Saldo Actual de Puntos</strong>
                                    </div>
                                    <div class="card-body text-center">
                                        <h1 class="display-4">
                                            <t t-esc="'%.0f' % doc.loyalty_points"/>
                                        </h1>
                                        <p class="text-muted mb-0">Puntos disponibles</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Tabla de Histórico -->
                        <t t-set="history_records" t-value="doc.loyalty_history_ids.sorted('date', reverse=True)"/>
                        <t t-if="history_records">
                            <h4 class="mb-3">Historial de Transacciones</h4>
                            <table class="table table-striped table-bordered">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Referencia</th>
                                        <th>Fecha</th>
                                        <th>Tipo</th>
                                        <th class="text-end">Puntos</th>
                                        <th class="text-end">Saldo</th>
                                        <th>Descripción</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="history_records" t-as="record">
                                        <tr>
                                            <td><t t-esc="record.name"/></td>
                                            <td><t t-esc="record.date" t-options="{'widget': 'datetime', 'format': 'dd/MM/yyyy HH:mm'}"/></td>
                                            <td>
                                                <span t-if="record.transaction_type == 'earned'" class="badge bg-success">Ganados</span>
                                                <span t-if="record.transaction_type == 'redeemed'" class="badge bg-danger">Canjeados</span>
                                                <span t-if="record.transaction_type == 'adjustment'" class="badge bg-info">Ajuste</span>
                                            </td>
                                            <td class="text-end">
                                                <span t-attf-class="#{record.points >= 0 and 'text-success' or 'text-danger'}">
                                                    <t t-esc="'%+.0f' % record.points"/>
                                                </span>
                                            </td>
                                            <td class="text-end"><t t-esc="'%.0f' % record.balance_after"/></td>
                                            <td>
                                                <t t-if="record.description">
                                                    <t t-esc="record.description[:50]"/>
                                                    <t t-if="len(record.description or '') > 50">...</t>
                                                </t>
                                                <t t-elif="record.order_id">
                                                    Orden: <t t-esc="record.order_id.name"/>
                                                </t>
                                                <t t-else="">-</t>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                                <tfoot>
                                    <tr class="table-secondary">
                                        <td colspan="3" class="text-end fw-bold">Totales:</td>
                                        <td class="text-end fw-bold">
                                            <t t-esc="'%+.0f' % sum(history_records.mapped('points'))"/>
                                        </td>
                                        <td class="text-end fw-bold">
                                            <t t-esc="'%.0f' % doc.loyalty_points"/>
                                        </td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </t>
                        <t t-else="">
                            <div class="alert alert-info">
                                Este cliente no tiene transacciones de fidelización.
                            </div>
                        </t>

                        <!-- Fecha de generación -->
                        <div class="row mt-4">
                            <div class="col-12 text-end text-muted">
                                <small>Reporte generado el: <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y %H:%M')"/></small>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>

